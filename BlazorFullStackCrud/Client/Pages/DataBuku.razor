@page "/books"
@inject IBooksService SuperHeroService
@inject NavigationManager NavigationManager

<PageTitle>Data Buku</PageTitle>

<h3>Super Heroes</h3>

<table class="table">
    <thead>
        <tr>
            <th>Judul Buku</th>
            <th>Penerbit</th>
            <th>Penulis</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hero in SuperHeroService.Bukus)
        {
            <tr>
                <td>@hero.Judul_Buku</td>
                <td>@hero.Penerbit</td>
                <td>@hero.Penulis</td>
                <td>@hero.GenreId</td>
                <td>
                    <button class="btn btn-primary" @onclick="(() => ShowHero(hero.Id))"><i class="oi oi-pencil"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary" @onclick="CreateNewHero">Create New Hero</button>

@code {
    protected override async Task OnInitializedAsync()
    {
        await SuperHeroService.GetSuperHeroes();
    }

    void ShowHero(int id)
    {
        NavigationManager.NavigateTo($"apibook/{id}");
    }

    void CreateNewHero()
    {
        NavigationManager.NavigateTo("/apibook");
    }
}
